{
    "include": [
        "examples/**/*",
        "src/**/*",
        "packages/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowJs": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "sourceMap": true,
        "pretty": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "ele-ui/*": ["./*"]
        }
    }
}
